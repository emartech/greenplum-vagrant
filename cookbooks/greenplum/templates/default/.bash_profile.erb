# .bash_profile

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
	. ~/.bashrc
fi

# User specific environment and startup programs

export PATH=$PATH:$HOME/bin
export MASTER_DATA_DIRECTORY=/gpmaster/gpsne-1

source /usr/local/greenplum-db-<%= node['greenplum']['version'] %>/greenplum_path.sh

alias wait_for_greenplum='until [ "0" == "$(gpstate -q; echo $?)" ]; do sleep 5; done'

